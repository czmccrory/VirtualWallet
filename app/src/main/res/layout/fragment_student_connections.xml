<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentConnections">

    <TextView
        android:id="@+id/studentConnections"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="#463CB7AC"
        android:gravity="center"
        android:text="Connections"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="60dp" />

    <Button
        android:id="@+id/NCR"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:layout_below="@+id/studentConnections"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:backgroundTint="#835E76"
        android:text="NCR" />

    <Button
        android:id="@+id/UoD"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:layout_below="@+id/NCR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#835E76"
        android:clickable="false"
        android:text="University of Dundee" />

    <Button
        android:id="@+id/Google"
        android:layout_width="165dp"
        android:layout_height="65dp"
        android:layout_below="@+id/UoD"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="#835E76"
        android:clickable="false"
        android:text="Google" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="372dp"
        android:backgroundTint="#056A88"
        android:foreground="@drawable/ic_action_back" />

    <Button
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="372dp"
        android:backgroundTint="#056A88"
        android:foreground="@drawable/ic_action_logout" />

</RelativeLayout>